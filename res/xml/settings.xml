<PreferenceScreen 
	xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/category_reader"
		android:key="reader">

		<ListPreference android:key="TextColor" android:title="@string/text_color"
			android:entries="@array/text_color_txt" android:entryValues="@array/text_color"
			android:defaultValue="#000000" android:persistent="true"
			android:summary="@string/text_color_summary" />

		<ListPreference android:key="TextBG" android:title="@string/background"
			android:entries="@array/text_color_txt" android:entryValues="@array/text_color"
			android:defaultValue="#ffffff" android:persistent="true"
			android:summary="@string/background_summary" />

		<com.jBible.controls.NumberChoise
			android:dialogTitle="@string/text_size" android:defaultValue="12"
			android:title="@string/text_size" android:key="TextSize"
			android:persistent="true" android:summary="@string/current_text_size" />

		<CheckBoxPreference 
			android:key="SplitVerse"
			android:title="@string/split_verse" 
			android:summaryOn="@string/split_verse_summary_on"
			android:summaryOff="@string/split_verse_summary_off" />
			
		<CheckBoxPreference 
			android:title="@string/disable_auto_screen_rotation" 
			android:key="DisableAutoScreenRotation" 
			android:defaultValue="false" 
			android:summary="@string/may_need_to_restart"/>

	</PreferenceCategory>
	
