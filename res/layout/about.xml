<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/about_dialog" 
	android:layout_height="fill_parent"
	android:layout_width="fill_parent" 
	android:orientation="vertical"
	android:background="#3E3E3C">
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/app_name_about" 
		android:gravity="center"
		android:textSize="24sp"
		android:textColor="#FF0000" />
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/app_license"
		android:gravity="center" 
		android:textSize="16sp"
		android:textColor="#FFDD00" />
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="center"
		android:text="@string/app_about_text" 
		android:textSize="13sp"
		android:textColor="@android:color/white" />
	<TextView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="@string/app_about_www" 
		android:gravity="center" 
		android:layout_margin="5pt"
		android:textColor="#120AAF"
		android:linksClickable="true"
		android:autoLink="web" />

</LinearLayout>
